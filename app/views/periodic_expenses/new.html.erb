<h3>New periodic expense</h3>
<%= form_for :expense, url: periodic_expenses_path do |f| %>
    <% if @expense.errors.any? %>
          
        <div id="error_explanation">
              <h2><%= pluralize(@expense.errors.count, "error") %> prohibited
                this expense from being saved:</h2>
              
          <ul>
                
            <% @expense.errors.full_messages.each do |msg| %>
                      
                <li><%= msg %></li>
                    
            <% end %>
                
          </ul>
            
        </div>
          
    <% end %>
    <div>
      <%= f.label :description, class: "right inline" %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :value, class: "right inline" %>
      <%= f.label :value, "R$", class: "prefix" %>
      <%= f.text_field :value %>
    </div>
    <div>
      <%= f.label :category, "Categoria", class: "right inline" %>
      <%= f.select(:category_id, options_from_collection_for_select(@categories, "id", "name", @expense.category_id), include_blank: true) %>
    </div>
    <div>
      <%= f.label :start_date, "Start date", class: "right inline" %>
      <%= date_select "expense", "start_date", order: [:month, :year], prompt: {month: 'Select month', year: 'Select year'} %>
    </div>
    <div>
      <%= f.label :end_date, "End date", class: "right inline" %>
      <%= date_select "expense", "end_date", order: [:month, :year], prompt: {month: 'Select month', year: 'Select year'} %>
    </div>
    <div>
      <%= f.submit "Save", class: "button tiny right" %>
    </div>
<% end %>

<%= link_to 'Back', periodic_expenses_path %>