<table>
  <tr>
    <th>Contribuidor</th>
    <th>Valor</th>
    <th>Desde</th>
  </tr>
 
  <% @contributions.each do |contribution| %>
    <tr>
      <td><%= contribution.contributor.full_name %></td>
      <td><%= contribution.amount %></td>
      <td><%= contribution.budget_date.strftime("%B %Y") %></td>
      <td><%= link_to 'Edit', edit_contribution_path(contribution) %></td>
      <td><%= link_to 'Destroy', contribution_path(contribution), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>