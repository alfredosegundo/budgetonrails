<h3>Nova receita</h3>
<%= form_for :revenue, url: revenues_path do |f| %>
    <% if @revenue.errors.any? %>
          
        <div id="error_explanation">
              <h4><%= pluralize(@revenue.errors.count, "error") %> ao salvar:</h4>
              
          <ul>
                
            <% @revenue.errors.full_messages.each do |msg| %>
                      
                <li><%= msg %></li>
                    
            <% end %>
                
          </ul>
            
        </div>
          
    <% end %>
    <div>
      <%= f.label :description, class: "right inline" %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :amount, class: "right inline" %>
      <%= f.label :amount, "R$", class: "prefix" %>
      <%= f.text_field :amount %>
    </div>
    <div>
      <%= f.label :category, "Categoria", class: "right inline" %>
      <%= f.select(:category_id, options_from_collection_for_select(@categories, "id", "name", @revenue.category_id), include_blank: true) %>
    </div>
    <div>
      <%= f.label :budget_date, "Orçamento", class: "right inline" %>
      <%= date_select "revenue", "budget_date", order: [:month, :year], default: DateTime.now %>
    </div>
    <div>
      <%= f.submit "Save", class: "button tiny right" %>
    </div>
<% end %>

<%= link_to 'Back', revenues_path %>