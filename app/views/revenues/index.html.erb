<% content_for :title do %>
  Receitas
<% end %>

<h1>Receitas</h1>
<%= link_to 'Nova receita', new_revenue_path, class: "button tiny" %>
<table>
  <tr>
    <th>Descrição</th>
    <th>Valor</th>
    <th>Orçamento</th>
    <th colspan="3"></th>
  </tr>
 
  <% @revenues.each do |revenue| %>
    <tr>
      <td>
        <%= revenue.description[0..14] %>
        <% if revenue.description.length > 15 %>
          ...
        <% end %>
      </td>
      <td><%= revenue.amount %></td>
      <td><%= revenue.formated_budget_date %></td>
      <td><%= link_to 'Show', revenue_path(revenue) %></td>
      <td><%= link_to 'Edit', edit_revenue_path(revenue) %></td>
      <td><%= link_to 'Destroy', revenue_path(revenue), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>