<h1>Listing expected expenses</h1>
<%= link_to 'New expected expense', new_expected_expense_path, class: "button tiny" %>
<table>
  <tr>
    <th>Description</th>
    <th>Value</th>
    <th>Initial date</th>
    <th>Final date</th>
    <th colspan="3"></th>
  </tr>
 
  <% @expenses.each do |expense| %>
    <tr>
      <td>
        <%= expense.description[0..14] %>
        <% if expense.description.length > 15 %>
          ...
        <% end %>
      </td>
      <td><%= expense.value %></td>
      <td><%= expense.initial_date %></td>
      <td><%= expense.final_date %></td>
      <td><%= link_to 'Show', expected_expense_path(expense) %></td>
      <td><%= link_to 'Edit', edit_expected_expense_path(expense) %></td>
      <td><%= link_to 'Destroy', expected_expense_path(expense), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>