<h1>Listing expenses</h1>
<%= link_to 'New expense', new_expense_path, class: "button tiny" %>
<table>
  <tr>
    <th>Contribuidor</th>
    <th>Descrição</th>
    <th>Categoria</th>
    <th>Orçamento</th>
    <th>Valor</th>
    <th colspan="3"></th>
  </tr>
 
  <% @expenses.each do |expense| %>
    <tr>
      <td>
        <% if expense.contributor %>
          <%= link_to expense.contributor.firstName, contributor_path(expense.contributor) %>
        <% else %>
          Not informed
        <% end %>
      </td>
      <td>
        <%= expense.description[0..14] %>
        <% if expense.description.length > 15 %>
          ...
        <% end %>
      </td>
      <td>
        <% if expense.category %>
          <%= link_to expense.category.name, category_path(expense.category) %>
        <% end %>
      </td>
      <td><%= expense.formated_budget_date %></td>
      <td><%= expense.value %></td>
      <td><%= link_to 'Show', expense_path(expense) %></td>
      <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
      <td><%= link_to 'Destroy', expense_path(expense), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>