<h1>New expense</h1>
<%= form_for :expense, url: expenses_path do |f| %>
  <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited
        this expense from being saved:</h2>
      <ul>
      <% @expense.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="small-3 columns">
      <%= f.label :description, class: "right inline" %>
    </div>
    <div class="small-9 columns">
      <%= f.text_area :description %>
    </div>
  </div>
  <div class="row">
    <div class="small-1 small-offset-7 columns">
      <%= f.label :value, "R$", class: "prefix" %>
    </div>
    <div class="small-4 columns">
      <%= f.text_field :value %>
    </div>
  </div>
  <% if @contributors.any? %>
    <div class="row">
      <%= select_tag(:contributor_id, options_for_select(@contributors), class: "small-5 small-offset-7 columns") %>
    </div>
  <% end %>
  <div class="row">
      <%= f.submit "Save", class: "button tiny right" %>
  </div>
<% end %>

<%= link_to 'Back', expenses_path %>